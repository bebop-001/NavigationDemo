<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kana_tutor.navigationdemo.CounterInfoFrag">
    <!-- for some reason, just giving textview a scrollbar doesn't work.
         needed a scrollview. -->
    <ScrollView
        android:id="@+id/counter_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TextView
            android:id="@+id/counter_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="#05FFE7"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:textStyle="bold"/>
    </ScrollView>
</layout>
